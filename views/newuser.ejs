<!DOCTYPE html>
<html>
    <%- include('./partials/head.ejs'); %>
    <body>
        <div id="login-container">
            <div id="form-wrapper">
                <form action="/dashboard" method="GET">
                    <button class="back-button" type="submit"><i class="fa-solid fa-circle-chevron-left"></i></button>
                </form>
                <div id="big-logo"><img src="/images/Pizza_Planet.png" alt=""></div>
                <h2>Arcade & Cuisine</h2>
                <% if (!success) { %>
                    <div class="success-message" style="color: red">
                        Username already exists!
                    </div>
                <% } %> 
                <form id="login-form" action="/new-user" method="POST">
                    <div>
                        <input type="text" name="fname" placeholder="First Name" autocomplete="off" required>
                        <input type="text" name="lname" placeholder="Last Name (optional)" autocomplete="off">
                    </div>
                    <div>
                        <input type="text" name="username" placeholder="username" autocomplete="off" required>
                        <input type="password" name="password" placeholder="password" required>
                    </div>
                    <div>
                        <h3>Admin controls</h3>
                        <span>Set user permissions</span>
                        <select name="permissions" id="select-type" onchange="adminControlKey()">
                            <option selected>Chef</option>
                            <option>Owner</option>
                        </select>
                        <input id="admin-key" style="border-radius: 8px; height: 20px; 
                        border: none; display: none;" type="text" name="admin-key", 
                        placeholder="Admin Key" autocomplete="off">
                    </div>
                    
                    <button class="button" type="submit">Submit</button>
                </form>
            </div>
        </div> <!--Login container ends-->

    </body>
</html>